<h2>Enter new password</h2>

<form action="" id="resetPasswordForm">

  <label for="email">Email</label>
  <input type="text" name="email" />

  <p id="password-error-message" style="font-size:12px; color:red"></p>
  <label for="password">New password</label>
  <input type="password" name="password" />

  <button type="submit">Change password</button>
</form>

<script>

  const resetPasswordForm = document.getElementById("resetPasswordForm"); let
  messageElement = document.getElementById("password-error-message");
  resetPasswordForm.addEventListener('submit',(e)=>{ e.preventDefault(); const
  formData = new FormData(resetPasswordForm); let payload = {};
  formData.forEach((value, key)=> payload[key]=value);
  fetch('/api/sessions/changePassword', { method: 'POST', body:
  JSON.stringify(payload), headers:{ 'Content-Type':'application/json' }
  }).then(res=>{ if(res.status == 400){ res.json().then(res=>{ if(res.error
  =='same password'){ messageElement.innerHTML = "Can't use same password" } })
  } }) })

</script>